{
    "extends": [
        "react-app",
        "react-app/jest"
    ],
    "rules": {
        "no-console": "warn",
        "quotes": ["warn", "single"],
        "prefer-const": "warn",
        "indent": ["warn", "tab"],
        "max-len": ["warn", {"code": 150}],
        "comma-dangle": ["warn", "always-multiline"],
        "semi": ["warn", "always"],
        "import/order": ["warn", {
            "groups": ["builtin", "external", "internal", "parent", "sibling", "index", "object", "type"],
            "newlines-between": "always-and-inside-groups"
        }]
    }
}